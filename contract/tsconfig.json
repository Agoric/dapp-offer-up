{
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "lib": [
        "ESNext",
        "DOM"
      ],
      "checkJs": true,
      "strict": true,
      "noImplicitAny": false,
      "useUnknownInCatchVariables": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "outDir": "./dist"
    },
    "include": [
      "src",
      "test"
    ],
    "exclude": [
      "node_modules"
    ]
  }
